touch main.go
vi !$
go run main.go

pstree -pl
// 查看进程关系

sshd(1297)───bash(1298)───su(1455)───   \
  bash(1456)───go(1553)─┬─main(1565)─┬─sh(1568)───pstree(1571)

echo $$   //1568

readlink /proc/1565/ns/uts
// uts:[4026531838]
readlink /proc/1568/ns/uts
// uts:[4026532430]

hostname -b bird
hostname  //bird

// 启动新的ssh连接
hostname  //ubuntu 

